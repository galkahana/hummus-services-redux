    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Backend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/backend",
            "runtimeVersion": "16",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "outputCapture": "std"
        },
        {
            "name": "Debug frontend (after npm start)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        }
    ]
}